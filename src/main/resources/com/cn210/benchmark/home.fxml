<VBox alignment="TOP_CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.cn210.benchmark.page.HomeController">
   <children>
      <MenuBar>
          <menus>
              <Menu mnemonicParsing="false">
                  <graphic>
                      <Label onMouseClicked="#onHomeButtonClick" text="Home" />
                  </graphic>
              </Menu>
             <Menu mnemonicParsing="false">
                <graphic>
                   <Label onMouseClicked="#onSystemButtonClick" text="System" />
                </graphic>
             </Menu>
              <Menu mnemonicParsing="false" text="Help">
                  <items>
                      <MenuItem mnemonicParsing="false" onAction="#onAboutButtonClick" text="About" />
                      <MenuItem mnemonicParsing="false" onAction="#onSRCButtonClick" text="Source Code" />
                  </items>
              </Menu>
          </menus>
      </MenuBar>
      <VBox alignment="CENTER" prefHeight="375.0" prefWidth="600.0">
         <children>
            <Label text="Kum Merr Rai Benchmark">
               <font>
                  <Font name="System Bold" size="28.0" />
               </font>
               <padding>
                  <Insets top="20.0" />
               </padding>
            </Label>
            <Label text="Please select which performance you want to benchmark">
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
               <children>
                  <Button mnemonicParsing="false" onAction="#onCPUButtonClick" text="CPU">
                     <font>
                        <Font size="18.0" />
                     </font>
                     <HBox.margin>
                        <Insets right="20.0" />
                     </HBox.margin>
                  </Button>
                  <Button mnemonicParsing="false" onAction="#onMemoryButtonClick" text="Memory">
                     <font>
                        <Font size="18.0" />
                     </font>
                     <HBox.margin>
                        <Insets right="20.0" />
                     </HBox.margin>
                  </Button>
                  <Button mnemonicParsing="false" onAction="#onDiskButtonClick" text="Disk">
                     <font>
                        <Font size="18.0" />
                     </font>
                     <HBox.margin>
                        <Insets right="20.0" />
                     </HBox.margin>
                  </Button>
                  <Button mnemonicParsing="false" onAction="#onTotalButtonClick" text="Total">
                     <font>
                        <Font size="18.0" />
                     </font>
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
